" This VimRC file shows Sodalite's Vim preferences, based on
" vim.wikia.com/wiki/Example_vimrc

" Various settings
set nocompatible
filetype indent plugin on
syntax on   " syntax highlighting

" COLORS
colorscheme evening


" SPACES and TABS
set tabstop=4
set softtabstop=4
set expandtab

" UI CONFIG
set cursorline
set wildmenu
set showmatch
set showcmd
set autoindent
set nostartofline
set ruler
set laststatus=3
set confirm
set cmdheight=2

" SEARCHING
set incsearch
set hlsearch



